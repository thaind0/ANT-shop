<header class="py-3 shadow mb-10">
    <div class="container flex flex-row items-center justify-between">
        <div class="flex flex-col">
            <a href="/" class="">
                {{> logo}}
            </a>
        </div>
        <div class="flex flex-row items-center justify-center gap-4">
            {{#if role}}
            <a href="/user/logout">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all">
                    Logout
                </button>
            </a>
            {{else}}
            <a href="/user/login">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all">
                    Login
                </button>
            </a>
            {{/if}}
        </div>
    </div>
</header>