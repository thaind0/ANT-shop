<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/tailwind.css" />
  <title>Add new Product</title>
</head>

<body>
  {{> header}}
  <div class="container">
    <form action="create" method="post"
      class="w-1/2 mx-auto mt-10 bg-slate-50 p-4 rounded-lg shadow-lg flex flex-col gap-2 text-slate-800 font-medium">
      <input class="bg-slate-50 hover:bg-slate-100 text-slate-800 font-medium py-2 px-4 rounded" type="text" name="name"
        placeholder="Name" required />
      <input class="bg-slate-50 hover:bg-slate-100 text-slate-800 font-medium py-2 px-4 rounded" type="text"
        name="price" placeholder="Price" required />
      <select class="bg-slate-50 hover:bg-slate-100 text-slate-800 font-medium py-2 px-4 rounded" name="category"
        required>
        <option value="action">Action</option>
        <option value="adventure">Adventure</option>
        <option value="racing">Racing</option>
        <option value="shooter">Shooter</option>
        <option value="strategy">Strategy</option>
        <option value="sports">Sports</option>
      </select>
      <input class="bg-slate-50 hover:bg-slate-100 text-slate-800 font-medium py-2 px-4 rounded" type="text"
        name="image" placeholder="Image URL" />
      <input type="submit" value="Add Product"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-1/2 mx-auto" />
    </form>
  </div>
</body>

</html>